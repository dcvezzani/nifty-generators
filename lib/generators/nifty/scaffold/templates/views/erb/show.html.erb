<%% title "<%= singular_name.titleize %>" %>

<%- for attribute in model_attributes -%>
<p>
  <strong><%= attribute.human_name.titleize %>:</strong>
  <%%= @<%= instance_name %>.<%= attribute.name %> %>
</p>
<%- end -%>

<%- if actions? :edit, :destroy, :index -%>
<ul class="wp-actions-list">
<%- if action? :edit -%>
  <li><%%= link_to_iconable 'Edit', [:edit, @client, @<%= singular_name %>], class: "edit-item show-text" %></li>
<%- end -%>
<%- if action? :destroy -%>
  <li><%%= link_to_iconable 'Destroy', [@client, @<%= singular_name %>], class: "destroy-item show-text", method: :delete, data: { confirm: 'Are you sure?' } %></li>
<%- end -%>
<%- if action? :index -%>
  <li><%%= link_to_iconable 'View All', [@client, :<%= plural_name %>], class: "index-item show-text" %></li>
<%- end -%>
</ul>
<%- end -%>
